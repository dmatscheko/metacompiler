// This breaks up an ebnf.oid.Group. Use only for childs of unbreakable rules.
function simplifyArr(rules) {
    if (rules.length == 1) {
        var op = rules[0].Operator
        if ( op == ebnf.oid.Sequence || op == ebnf.oid.Group || (op == ebnf.oid.Or && rules[0].Childs.length <= 1) ) {
            return simplifyArr(rules[0].Childs)
        }
    }
    return rules
}

// This also breaks up an ebnf.oid.Group. Use only for childs of unbreakable rules.
function simplifyToArr(rule) {
    return simplifyArr([rule])
}

// Groups with only one child can be broken apart as long as down there is an unbreakable rule. Try to find one.
function trySimplifyDown(rule) {
    if (rule.Childs == undefined) {
        return rule
    }
    var op = rule.Operator
    if (rule.Childs.length == 1) {
        if (op == ebnf.oid.Sequence || op == ebnf.oid.Group || op == ebnf.oid.Or) {
            return trySimplifyDown(rule.Childs[0])
        }
    }
    if (op == ebnf.oid.Sequence) {
        return undefined
    } else {
        return rule
    }
}

function simplify(rule) {
    var ruleDown = trySimplifyDown(rule)
    if (ruleDown != undefined) {
        return ruleDown
    }
    if (rule.Childs.length == 1) { // Breaking up ebnf.oid.Group did not work. Getting down only with Sequence and Or.
        var op = rule.Operator
        if (op == ebnf.oid.Sequence || op == ebnf.oid.Or) {
            return simplify(rule.Childs[0])
        }
    }
    return rule
}




