var names = [];
var prodsPos = {};
var lastPos = 0
function getNameIdx(name) {
    var pos = names.indexOf(name);
    if (pos != -1) { return pos };
    return names.push(name)-1;
}

function buildProduction(prodName, prodTag, prodExpression) {
    prodsPos[prodName.Int] = lastPos++
    if (prodTag != undefined) {
        var tag = ebnf.newTag(prodTag.TagChilds, simplifyToArr(prodExpression), prodTag.Pos);
        return ebnf.newProduction(prodName.String, prodName.Int, [tag], prodName.Pos)
    } else {
        return ebnf.newProduction(prodName.String, prodName.Int, simplifyToArr(prodExpression), prodName.Pos)
    }
}

